/* menu */
.menu
	display grid
	grid-area menu
	grid-template-columns repeat(2, auto)
	grid-template-rows auto
	grid-column-gap 1rem
	grid-template-areas "logo pagination"
	align-items center
	background-color light
	padding 0 4rem
	justify-self start	
.logo
	grid-area logo
.pagination
	grid-area pagination
	&__list
		align-items center
		display flex
		flex-wrap wrap
	&__item
		position relative
		margin-right 0.8rem
		&:hover
			background grey
			.dropdown__list
				display block
	&__link
		poppinsMedium()
		font-size 1.6rem
		line-height 7.5rem
		opacity 1
		padding 0 1rem
		text-decoration none
		color text
		&:hover
			color yellow
			border none
.dropdown
	&__list
		position absolute
		background grey
		padding 2rem
		width 24rem
		display none
	&__link
		poppinsMedium()
		font-size 1.4rem
		line-height 3rem
		opacity 1
		color text
		text-decoration none
		&:hover
			color yellow





