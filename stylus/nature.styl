/* nature */
.nature
	display grid
	grid-area nature
	grid-template-rows minmax(auto, 90rem)
	background light url(../img/content/nature.jpg) no-repeat top center
	&-content
		display grid
		grid-template-rows auto auto
		max-width 70rem
	&-nav
		padding-top 6rem
	&-nav__link
		color light
	&__title
		poppinsBold()
		color light
		font-size 4.8rem
		line-height 5.8rem
		margin-top 3.6rem
		
		&_underscore
			border-bottom 1.7rem solid yellow
			display inline-block
			line-height .4rem
.block
	display flex
	align-items center
	position relative
	&:nth-child(2)
		margin-top 4.2rem
		margin-left 0.8rem
	&:nth-child(3)
		margin-top 1rem
		margin-left 11.5rem
	&:last-child
		margin-top 0.9rem
		margin-left 1.7rem
.number
	bangers()
	font-size 14.4rem
	color yellow
	line-height 1
	&__text
		poppinsMedium()
		max-width 36.5rem
		font-size 2rem
		line-height normal
		color light
		padding-left 3rem
.line-dotted__right
	position: absolute
	// right 16rem
	right 23%
	top 50%
.line-dotted__left
	position: absolute
	// left -14rem
	left -25%
	top 50%
