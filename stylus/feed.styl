/* feed */
.feed
	display grid
	grid-area feed
	grid-template-rows minmax(auto, 82.5rem)
	align-items start
	background light url(../img/content/cat-feed.png) no-repeat top left
	margin-top 3rem
	&-row
		display grid
		grid-template-rows auto auto
	&-content
		display grid
		grid-template-columns auto auto
		grid-column-gap 4.1rem
		&__title
			poppinsBold()
			color light
			font-size 4.8rem
			line-height 5.8rem
			margin-top 10.8rem
			max-width 50rem		
		&__text
			poppinsRegular()
			font-size 1.6rem
			line-height 2.6rem
			margin-top 7.8rem
.text__bold
	poppinsBold()
	font-size 2rem
	line-height 2.7rem
	margin-top 5rem
			
				

